<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/markerPhoto"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:contentDescription="@string/title_activity_photo"
        tools:srcCompat="@tools:sample/backgrounds/scenic[14]" />

    <Button
        android:id="@+id/newImageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_photo" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/save_photo" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_photo" />
</LinearLayout>